Algoritmo "semnome"

Var
     x, n, soma: inteiro


Inicio
      escreva ("Digite o 1° número: ")
      leia (x)
      n<-1
      soma <- 0
            enquanto x<>0 faca
               n<- n + 1
               soma <- soma + x
               escreva ("Escreva o ", n,"° número:  ")
               leia (x)

      
      fimEnquanto
      Escreval ("A soma é igual a ", soma)

Fimalgoritmo